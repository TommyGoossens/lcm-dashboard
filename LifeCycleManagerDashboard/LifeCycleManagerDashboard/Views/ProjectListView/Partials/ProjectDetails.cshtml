<!-- DEVICES -->
<div class="row h-75">
    <div class="col-12 h-100">
        <div class="devices-table h-100">
            <table class="table table-striped table-fixed">
                <thead>
                    <tr class="d-flex">
                        <th class="col-1">Connection</th>
                        <th class="col-1">State</th>
