@model DeviceDetailViewDataModel
<script src="~/bundle.js"></script>


<div class="col-3 h-100">
    <div class="row h-100">
        <div class="col-6">
            <div class="row">
                <div class="text-center">
                    <h5>Filters</h5>
                </div>
            </div>
            <!-- Datepicker -->
            <div class="row">
                <button id="date-time-picker-logs" class="btn btn-outline-primary w-100" style="height: 60px">
                    <img src="images/calendar.png" alt="Calendar" width="25" height="25"/>
                    <p id="logs-date-selected">Pick a date </p>
                </button>
            </div>
            <!-- Logging level selector -->
            <div class="row pt-2">
                <small>Select a logging level</small>
                <button type="button" class="btn btn-secondary dropdown-toggle w-100" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="log-level-dropdown">
                    All
                </button>
                <ul class="dropdown-menu checkbox-menu allow-focus" id="log-level-dropdown-items">
                </ul>
            </div>

            <!-- Apply filter -->
            <div class="row pt-3">
                <button type="button" class="btn btn-heijmans-blue w-100" onclick="DeviceDetails.ApplyFilter()" id="btn-apply-log-filters">Apply</button>
            </div>
        </div>
        <div class="col-6">
            <div class="row log-messages-list h-100" id="log-messages-scroll-container">
                <div class="list-group h-100 w-100" id="log-messages-list" role="tablist">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col" id="log-messages-detail">
    <!-- Content will be generated by the ShowLogMessage function -->
</div>
<script>
    DeviceDetails.SetupFiltersUI();
</script>